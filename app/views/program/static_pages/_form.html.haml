- object ||= @object
- url = (params[:action] == "edit" ? object_edit_path(object.class.inspect) : object_create_path(object.class.inspect))
.span-8
  %ul
    = form_for object, :url => url do |f|
      = f.label :title
      = f.text_field :title
      = f.label :text
      = f.text_area :text, :class => "mceEditor"
      = f.submit
      